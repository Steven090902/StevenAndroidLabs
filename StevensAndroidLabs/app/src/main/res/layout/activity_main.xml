<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter a city name:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/city_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/forecastButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get forecast"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temp goes here"
                android:textSize="20sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/maxTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Max goes here"
                android:textSize="20sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/minTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Min goes here"
                android:textSize="20sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Humidity goes here"
                android:textSize="20sp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="171dp"
                android:textAlignment="center"
                android:visibility="invisible"
                app:srcCompat="@drawable/sunny" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description goes here"
                android:textAlignment="center"
                android:textSize="20sp"
                android:visibility="invisible" />
        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/popout_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="start"
            android:fitsSystemWindows="true"

            app:headerLayout="@layout/popout_header"
            app:menu="@menu/main_acitvity_actions"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

    </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>